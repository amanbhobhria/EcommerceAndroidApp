<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="@color/white">

    <!-- Container Layout for CardView content -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- Image of the Category -->
        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/eyes"
            android:contentDescription="Category Image" />

        <!-- Name of the Category -->
        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Name"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Button to View Products -->
        <TextView
            android:id="@+id/btnViewProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/see_all_bg"
            android:gravity="center"
            android:padding="5.20dp"
            android:text="View"
            android:textColor="@color/green"
            android:textSize="14.30dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
